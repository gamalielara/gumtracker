{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom"],
    "paths": {
      "<assets>/*": ["./src/assets/*"],
      "<utils>/*": ["./src/utils/*"],
      "<screens>/*": ["./src/screens/*"],
      "<type>/*": ["./src/type/*"],
      "<module>/*": ["./src/module/*"],
      "<components>/*": ["./src/components/*"],
      "<src>/*": ["./src/*"]
    },
    "experimentalDecorators": true
  },
  "extends": "@react-native/typescript-config/tsconfig.json"
}
